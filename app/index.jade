doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title SuperCalc
    link(rel='stylesheet', href='css/app.css')
  body
    h1#title SuperCalc

    table#calculator
      tbody
        tr
          td#display(colspan=5) 0
        tr
          td.number.button 7
          td.number.button 8
          td.number.button 9
          td.operator.button(data-op='add') +
          td.operator.button(data-op='sum') &#120564
        tr
          td.number.button 4
          td.number.button 5
          td.number.button 6
          td.operator.button(data-op='sub') -
          td.operator.button(data-op='exp') x<sup>y
        tr
          td.number.button 1
          td.number.button 2
          td.number.button 3
          td.operator.button(data-op='mul') *
          td.operator.button(data-op='root') &#8730;
        tr
          td.number.button 0
          td.decimal.button .
          td.sign.button &#177
          td.operator.button(data-op='div') &#247
          td.operator.button(data-op='fact') !
        tr
          td.clear.button(col-span=1) CA
          td.clear.button#clear-box C
          td#g.push.button P
          td.empty
          td.empty
        tr
        td#queue(colspan=5)



    script(src='js/vendor/jquery-2.1.0.js')
    script(src='js/source/main.js')
